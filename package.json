{
  "name": "gallery",
  "type": "module",
  "version": "0.1.0",
  "description": "Una aplicación moderna de galería de imágenes con Cloudinary y Astro",
  "author": "devlitus",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/devlitus/gallery.git"
  },
  "keywords": [
    "astro",
    "gallery",
    "cloudinary",
    "typescript",
    "tailwind"
  ],
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "eslint . --ext .js,.ts,.astro --fix",
    "lint:check": "eslint . --ext .js,.ts,.astro",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "astro check",
    "test": "vitest",
    "test:ci": "vitest run",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "clean": "rm -rf dist .astro",
    "start": "npm run build && npm run preview"
  },
  "dependencies": {
    "@astrojs/netlify": "^6.3.4",
    "@astrojs/node": "^9.2.2",
    "@tailwindcss/vite": "^4.1.7",
    "astro": "^5.8.0",
    "astro-cloudinary": "^1.3.2",
    "cloudinary": "^2.6.1",
    "dotenv": "^16.5.0",
    "tailwindcss": "^4.1.7"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "@eslint/js": "^9.15.0",
    "@vitest/ui": "^2.1.8",
    "astro-eslint-parser": "^1.0.3",
    "eslint": "^9.17.0",
    "eslint-plugin-astro": "^1.3.1",
    "jsdom": "^26.0.0",
    "prettier": "^3.4.2",
    "prettier-plugin-astro": "^0.14.1",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.17.0",
    "vite": "^6.0.7",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
